{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "dlock", "1",
        [
         kernel,
         stdlib,
         sasl,
         % compiler, syntax tools needed for lager
         compiler,
         syntax_tools,
         % dependencies
         lager,
         % apps part of the project
         util,
         db,
         consensus,
         server
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "dlock"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},

       {app, compiler, [{incl_cond, include}]},
       {app, syntax_tools, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},

       {app, util, [{incl_cond, include}]},
       {app, db, [{incl_cond, include}]},
       {app, consensus, [{incl_cond, include}]},
       {app, server, [{incl_cond, include}]}
      ]}.

{target_dir, "dlock"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},

           {template, "files/dlock", "bin/dlock"},
           {template, "files/dlock-admin", "bin/dlock-admin"},
           {template, "files/dlock.cmd", "bin/dlock.cmd"},

           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},

           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/sys.config", "etc/sys.config"},

           {template, "files/vm.args", "etc/vm.args"},
           % Custom
           {copy, "../priv", "."}
          ]}.
